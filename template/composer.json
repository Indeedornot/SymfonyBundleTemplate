{
  "name": "${PACKAGE_NAME}",
  "type": "symfony-bundle",
  "description": "A reusable Symfony bundle template",
  "license": "MIT",
  "authors": [
    {
      "name": "Bartosz Misiek",
      "email": "gravitybartek@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.3.8",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "runtime/frankenphp-symfony": "^0.2.0",
    "symfony/console": "7.1.*",
    "symfony/dotenv": "7.1.*",
    "symfony/flex": "^2",
    "symfony/framework-bundle": "7.1.*",
    "symfony/runtime": "7.1.*",
    "symfony/yaml": "7.1.*",
    "doctrine/dbal": "^3",
    "doctrine/doctrine-bundle": "^2.12",
    "doctrine/doctrine-migrations-bundle": "^3.3",
    "doctrine/orm": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "${ESCAPED_NAMESPACE}": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "symfony/runtime": true,
      "symfony/flex": true
    }
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    }
  },
  "extra": {
    "symfony": {
      "docker": true
    }
  }
}
